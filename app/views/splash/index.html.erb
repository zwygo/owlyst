  <body>
    <%= render "shared/topbar" %>

    <div class="my_lists clearfix">
      <div class="container list_container">
        <div class="row list_row">
          <div class="col-md-4 side_list_area" id="test">
            <div class="white_box clearfix">
              <div class="list_header">
                <h2><a href="#">Movies I want to watch</a></h2>
                <h3>Created on 02/01/14 at 11:14am</h3>
                <ul class="list_actions_wrapper clearfix">
                  <li>
                    <a href="#" class="edit_list">edit</a>
                  </li>
                  <li>
                    <span>&middot;</span>
                  </li>
                  <li>
                    <a href="#" class="delete_list">delete</a>
                  </li>
                </ul>
              </div>
              <div class="list_body">
                <ul class="list_item_wrapper clearfix">
                  <li class="clearfix">
                    <div class="show_in_view_mode">
                      <span class="checkbox list_item">
                        <label>
                          <input type="checkbox" value="">
                          Harold and Kumar go to White Castle
                        </label>
                      </span>
                      <i class="glyphicon glyphicon-move move_list_item"></i>
                    </div>
                    <div class="show_in_edit_mode">
                      <input type="text" class="form-control edit_list_item_input"  value="Harold and Kumar go to White Castle" placeholder="Add new list item...">
                    </div>
                  </li>
                  <li class="clearfix">
                    <div class="show_in_view_mode">
                      <span class="checkbox list_item">
                        <label>
                          <input type="checkbox" value="">
                          Harold and Kumar go to White Castle and Burger King
                        </label>
                      </span>
                      <i class="glyphicon glyphicon-move move_list_item"></i>
                    </div>
                    <div class="show_in_edit_mode">
                      <input type="text" class="form-control edit_list_item_input"  value="Harold and Kumar go to White Castle" placeholder="Add new list item...">
                    </div>
                  </li>
                </ul>
                <div class="add_new_list_item_input_wrapper">
                  <input type="text" class="form-control add_new_list_item_input" placeholder="Click to add new list item...">
                </div>
              </div>
            </div>
            <% @lists.each do |l| %>
            <div class="white_box clearfix" lid="<%= l['lid'] %>">
              <div class="list_header">
                <h2><a href="#"><%= l['title'] %></a></h2>
                <h3>Created on 02/01/14 at 11:14am</h3>
                <ul class="list_actions_wrapper clearfix">
                  <li>
                    <a href="#" class="edit_list">edit</a>
                  </li>
                  <li>
                    <span>&middot;</span>
                  </li>
                  <li>
                    <a href="#">delete</a>
                  </li>
                </ul>
              </div>
              <div class="list_body">
                <ul class="list_item_wrapper clearfix">
                  <% l['list_items'].each do |li| %>
                  <li class="clearfix" liid="<%= li['liid']%>">
                    <div class="show_in_view_mode">
                      <span class="checkbox list_item">
                        <label>
                          <input type="checkbox" value="">
                          <%= li['title'] %>
                        </label>
                      </span>
                      <i class="glyphicon glyphicon-move move_list_item"></i>
                    </div>
                    <div class="show_in_edit_mode">
                      <div class="add_new_list_item_input_wrapper">
                        <input type="text" class="form-control edit_list_item_input"  value="Harold and Kumar go to White Castle" placeholder="Add new list item...">
                      </div>
                    </div>
                  </li>
                  <% end %>
                </ul>
                <input type="text" class="form-control add_new_list_item_input" placeholder="Click to add new list item...">
              </div>
            </div>
            <% end %>
          </div>
          <div class="col-md-8 main_list_area">
            <div class="white_box main_list_box clearfix">
              <div class="list_header">
                <h2><a href="#">Movies I want to watch</a></h2>
                <h3>Created on 02/01/14 at 11:14am</h3>
                <ul class="list_actions_wrapper clearfix">
                  <li>
                    <a href="#" class="edit_list">edit</a>
                  </li>
                  <li>
                    <span>&middot;</span>
                  </li>
                  <li>
                    <a href="#" class="delete_list">delete</a>
                  </li>
                </ul>
              </div>
              <div class="list_body">
                <ul class="list_item_wrapper clearfix">
                  <li class="clearfix">
                    <div class="show_in_view_mode">
                      <span class="checkbox list_item">
                        <label>
                          <input type="checkbox" value="">
                          Harold and Kumar go to White Castle and Burger King
                        </label>
                      </span>
                      <i class="glyphicon glyphicon-move move_list_item"></i>
                    </div>
                    <div class="show_in_edit_mode">
                      <input type="text" class="form-control edit_list_item_input"  value="Harold and Kumar go to White Castle" placeholder="Add new list item...">
                    </div>
                  </li>
                  <li class="clearfix">
                    <div class="show_in_view_mode">
                      <span class="checkbox list_item">
                        <label>
                          <input type="checkbox" value="">
                          Harold and Kumar go to White Castle and Burger King
                        </label>
                      </span>
                      <i class="glyphicon glyphicon-move move_list_item"></i>
                    </div>
                    <div class="show_in_edit_mode">
                      <input type="text" class="form-control edit_list_item_input"  value="Harold and Kumar go to White Castle" placeholder="Add new list item...">
                    </div>
                  </li>
                </ul>
                <input type="text" class="form-control add_new_list_item_input" placeholder="Click to add new list item...">
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
